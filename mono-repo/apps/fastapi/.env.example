# FastAPI Environment Configuration

# Database Configuration (if needed for direct DB access)
DATABASE_URL="your_database_url_here"

# Shared Storage Configuration
# This path should be accessible by both backend and FastAPI services
# Must match the SHARED_STORAGE_PATH in backend .env
SHARED_STORAGE_PATH="/shared/storage"

# Alternative paths for different environments:
# Development (Windows): SHARED_STORAGE_PATH="C:/shared_storage"
# Development (Unix): SHARED_STORAGE_PATH="/tmp/shared_storage"
# Docker: SHARED_STORAGE_PATH="/shared/storage"
# Production: SHARED_STORAGE_PATH="/mnt/shared_storage"

# FastAPI Application Configuration
PROJECT_NAME="KochiMetro FastAPI Services"
VERSION="1.0.0"
DESCRIPTION="FastAPI services for train fleet simulation, MOO ranking, and RL scheduling"
HOST="0.0.0.0"
PORT=8000
DEBUG=false

# CORS Configuration
ALLOWED_HOSTS_STR="*"
# For multiple hosts, use comma-separated values:
# ALLOWED_HOSTS_STR="http://localhost:3000,http://localhost:8000,https://yourdomain.com"

# Simulation Service Configuration
SIMULATION_MAX_DAYS=365
SIMULATION_DEFAULT_DAYS=1

# Backend Communication URLs
BACKEND_BASE_URL="http://backend:8000"
WEBHOOK_SIMULATION_URL="${BACKEND_BASE_URL}/api/webhook/simulation-finished"
WEBHOOK_MOO_URL="${BACKEND_BASE_URL}/api/webhook/moo-finished"
WEBHOOK_RL_URL="${BACKEND_BASE_URL}/api/webhook/rl-finished"

# For local development, use:
# BACKEND_BASE_URL="http://localhost:3000"